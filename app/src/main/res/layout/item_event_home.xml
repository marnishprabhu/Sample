<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/extra_light_white"

    xmlns:user="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        style="@style/CardViewStyle.Cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="8dp"
        user:cardCornerRadius="20dp"
        user:cardPreventCornerOverlap="false"
        user:layout_constraintBottom_toBottomOf="parent"
        user:layout_constraintEnd_toEndOf="parent"
        user:layout_constraintStart_toStartOf="parent"
        user:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/card_background">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"

                android:fontFamily="@font/mulibold"
                android:text="Hissssssssssssssssssssssssssssssssssssssssssss"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintStart_toStartOf="parent"
                user:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/mulibold"
                android:maxLines="2"
                android:text="Festival"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_16sdp"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintStart_toStartOf="@+id/title"
                user:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:text="Date : "
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                user:layout_constraintStart_toStartOf="@+id/description"
                user:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:text="16/12/2022"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_14sdp"
                user:layout_constraintBaseline_toBaselineOf="@+id/textView10"
                user:layout_constraintStart_toEndOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/muliregular"
                android:gravity="start"
                android:text="Time : "
                android:layout_marginBottom="5dp"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                user:layout_constraintBottom_toBottomOf="parent"
                user:layout_constraintStart_toStartOf="@+id/textView10"
                user:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:gravity="start"
                android:layout_marginEnd="5dp"
                android:text="3:00 pm"
                user:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"

                android:textColor="@color/pure_white"
                android:textSize="@dimen/_14sdp"
                user:layout_constraintBaseline_toBaselineOf="@+id/textView12"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintStart_toEndOf="@+id/textView12" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>