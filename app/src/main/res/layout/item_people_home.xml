<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:user="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        user:strokeWidth="2dp"
        user:cardElevation="8dp"
        user:cardPreventCornerOverlap="false"
        user:shapeAppearance="@style/CardView.ShapeAppearance"
        user:layout_constraintBottom_toBottomOf="parent"
        user:layout_constraintEnd_toEndOf="parent"
        user:layout_constraintStart_toStartOf="parent"
        user:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@drawable/add_image_96"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintStart_toStartOf="parent"
                user:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:minLines="2"
                android:fontFamily="@font/mulibold"
                android:text="albert kinyulwjw"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                user:layout_constraintBottom_toTopOf="@id/clg_id"
                user:layout_constraintEnd_toEndOf="@+id/profile_pic"
                user:layout_constraintStart_toStartOf="@+id/profile_pic"
                user:layout_constraintTop_toBottomOf="@+id/profile_pic"
                user:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/clg_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/muliregular"
                android:gravity="start"
                android:maxLines="1"
                user:layout_constraintTop_toBottomOf="@id/name"
                android:text="953417104018"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                user:layout_constraintBottom_toBottomOf="parent"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintStart_toStartOf="@+id/name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>