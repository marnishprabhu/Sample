<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/extra_light_white"
    xmlns:user="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle.Cut"
        user:cardPreventCornerOverlap="false"
        android:layout_margin="8dp"
        user:cardElevation="3dp"
        user:layout_constraintBottom_toBottomOf="parent"
        user:layout_constraintEnd_toEndOf="parent"
        user:layout_constraintStart_toStartOf="parent"
        user:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/card_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulibold"
                android:text="This is my titleaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                android:maxLines="3"
                android:ellipsize="end"
                user:layout_constraintBottom_toTopOf="@id/description"
                user:layout_constraintEnd_toStartOf="@+id/options"
                user:layout_constraintHorizontal_bias="0.5"
                user:layout_constraintStart_toStartOf="parent"
                user:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/options"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="top"
                android:padding="8dp"

                android:src="@drawable/ic_item"
                android:visibility="visible"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintHorizontal_bias="0.5"
                user:layout_constraintStart_toEndOf="@+id/title"
                user:layout_constraintTop_toTopOf="@+id/title"
                user:tint="@color/pure_white" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mulibold"
                android:text="This is my descrissssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssstion . this can be very more tan you can expect"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_16sdp"
                user:layout_constraintEnd_toEndOf="parent"
                user:layout_constraintHorizontal_chainStyle="packed"
                user:layout_constraintStart_toStartOf="@+id/title"
                user:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:text="Date : "
                android:layout_marginTop="10dp"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                user:layout_constraintStart_toStartOf="@+id/description"
                user:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:text="This sssssssssssssssssssssse"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_16sdp"
                user:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                user:layout_constraintStart_toEndOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulibold"
                android:text="Time : "
                android:layout_marginTop="5dp"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_18sdp"
                user:layout_constraintStart_toStartOf="@+id/textView2"
                user:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/mulibold"
                android:text="Thisssssssssss"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_16sdp"
                user:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                user:layout_constraintStart_toEndOf="@+id/textView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>