<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:user="http://schemas.android.com/apk/res-auto"
    tools:context=".addstudent.AddStudentFamilyFragment"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/father_name"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        user:errorEnabled="true"
        user:errorTextColor="@color/red"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textCapSentences"

            android:hint="Father's Name (Optional)" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/father_occupation"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        user:errorEnabled="true"
        user:errorTextColor="@color/red"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father's Occupation (Optional)"
            android:inputType="textCapWords|textCapSentences"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/father_phone_num"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        user:counterEnabled="true"
        user:counterMaxLength="10"
        user:counterTextColor="@color/hint_edit_text"
        user:errorEnabled="true"
        user:errorTextColor="@color/red"
        user:errorIconDrawable="@drawable/ic_error">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Father's Phone Number"
        android:inputType="number"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mother_name"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        user:errorEnabled="true"
        user:errorTextColor="@color/red"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textCapSentences"

            android:hint="Mother's Name (Optional)" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mother_occupation"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        user:errorEnabled="true"
        user:errorTextColor="@color/red"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textCapSentences"

            android:hint="Mother's Occupation (Optional)" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mother_phone_num"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        user:counterEnabled="true"
        user:counterMaxLength="10"
        user:counterTextColor="@color/hint_edit_text"
        user:errorEnabled="true"
        user:errorIconDrawable="@drawable/ic_error"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mother's Phone Number"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/no_sibling"
        style="@style/myStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No of sibling (Optional)"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        style="@style/buttonStyle"
        android:theme="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner_background"
        android:text="next"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>